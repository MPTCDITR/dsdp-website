---
// Step 2: Component Script
import type { Video } from "@/lib/types";

import VideoCard from "@/components/pages/video-and-media/VideoCard.astro";

import { useTranslations } from "@/i18n/utils";

interface Props {
  videos: Video[];
  translations: Record<string, string>;
  lang: string;
}

const { videos, lang } = Astro.props;
const t = useTranslations(lang);
---

{
  !videos || videos.length === 0 ? (
    <div class="min-h-screen text-center py-12">
      <h2 class="text-4xl font-semibold text-primary">No videos found</h2>
      <p class="text-muted-foreground mt-2">
        We don't have any videos yet! Please come back to this page later.
      </p>
    </div>
  ) : (
    <div class="container mx-auto my-12">
      {/* Title */}
      <h1 class="text-4xl font-bold text-center text-gradient leading-normal mb-4">
        {t("video-media.title")}
      </h1>
      {/* Description */}
      <p class="text-center text-muted-foreground max-w-8xl mx-auto mb-12">
        {t("video-media.description")}
      </p>
      {/* Video List */}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {videos.map((video) => (
          <VideoCard video={video} />
        ))}
      </div>
    </div>
  )
}
