---
const { item, t } = Astro.props;
---

<section
  class="grid lg:grid-cols-5 md:flex-wrap grid-cols-1 gap-6 justify-between items-end self-stretch w-full mb-6 lg:mb-12 xl:mb-16"
>
  <div
    class="flex flex-col items-start gap-3 lg:col-span-3 md:col-span-2 col-span-1"
  >
    <p class="text-8xl text-gradient font-semibold">
      {item.header_number}
    </p>
    <h2 class="text-3xl leading-10 font-semibold mb-4">
      {t(item.title)}
    </h2>
    <item.content t={t} />
  </div>
  <div class="lg:col-span-2 col-span-1">
    <img
      src={item.image}
      alt="image"
      class="object-cover rounded-lg w-full h-auto md:object-contain md:w-auto md:h-auto lg:object-cover lg:w-full lg:h-auto xl:h-auto xl:object-cover"
    />
  </div>
</section>
