---
import type { ImageMetadata } from "astro";

export interface Props {
  title: string;
  description: string;
  date: string;
  author: string;
  image?: ImageMetadata;
  slug: string;
  lang: string;
  translations: Record<string, string>;
}

const { title, description, image, slug, lang } = Astro.props;
const urlSlug = slug.split("/").slice(1).join("/");
---

<a
  href={`/${lang}/news-and-events/${urlSlug}`}
  class="group relative flex h-full min-h-[320px] w-full flex-col overflow-hidden rounded-lg text-white shadow-lg transition-all duration-300 ease-in-out hover:-translate-y-1 hover:shadow-xl"
>
  <!-- Image -->
  {
    image && (
      <img
        src={image.src}
        alt={title}
        class="absolute inset-0 w-full h-full object-cover rounded-lg"
        loading="lazy"
      />
    )
  }

  <!-- Dark overlay -->
  <div
    class="absolute inset-0 bg-black/30 transition-colors duration-300 group-hover:bg-black/0 rounded-lg"
  >
  </div>

  <!-- Bottom content -->
  <div
    class="mt-auto relative z-10 bg-white/10 backdrop-blur-md px-4 py-3 w-full rounded-b-lg"
  >
    <h3 class="text-2xl font-bold line-clamp-2">{title}</h3>
    <p class="mt-2 text-sm leading-relaxed text-gray-200 line-clamp-2">
      {description}
    </p>
  </div>
</a>
