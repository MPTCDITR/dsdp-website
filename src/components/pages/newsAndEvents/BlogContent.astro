---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  date: string;
  author: string;
  description: string;
  image?: ImageMetadata;
}

const { title, date, author, description, image } = Astro.props;
---

<article class="container mx-auto my-4">
  {
    image && (
      <Image
        src={image}
        alt={title}
        class="rounded-lg w-full h-fit object-cover"
        loading="lazy"
        width={image.width}
        height={image.height}
      />
    )
  }

  <section class="max-w-5xl mx-auto space-y-6">
    <h1
      class="text-xl lg:text-4xl font-bold text-primary leading-snug text-justify lg:text-start mt-8 tracking-tighter"
    >
      {title}
    </h1>
    <p
      class="text-neutral-500 text-base leading-loose"
      set:html={description}
    />
    <p
      class="flex items-center gap-4 text-secondary font-bold md:text-xl text-lg flex-wrap"
    >
      <span>{author},</span>
      <span>
        <time>{date}</time>
      </span>
    </p>
    <div class="prose md:prose-lg lg:prose-xl max-w-none text-justify">
      <slot />
    </div>
  </section>
</article>
