---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  stepNumber: string;
  title: string;
  description: string;
  imageUrl: ImageMetadata;
  className?: string;
}

const { stepNumber, title, description, imageUrl, className } = Astro.props;
---

<article
  class:list={[
    "relative flex flex-col justify-start min-h-[320px] w-full h-full p-6 rounded-2xl overflow-hidden text-white shadow-lg group transition-all duration-300 ease-in-out hover:shadow-xl hover:-translate-y-1",
    className,
  ]}
>
  <Image
    src={imageUrl}
    alt={title}
    class="absolute inset-0 w-full h-full object-cover rounded-2xl z-0"
    loading="lazy"
    width={500}
    height={500}
  />
  <div
    class="absolute inset-0 bg-black/50 group-hover:bg-black/40 transition-colors duration-300 rounded-2xl"
  >
    <div class="relative z-10 p-4">
      <p class="font-bold text-6xl uppercase text-white/50">
        {stepNumber}
      </p>
      <h3 class="text-2xl font-bold mt-1">
        {title}
      </h3>
      <p class="text-sm mt-2 leading-relaxed text-white">
        {description}
      </p>
    </div>
  </div>
</article>
