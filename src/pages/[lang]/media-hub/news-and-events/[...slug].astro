---
import { formatDate } from "@/lib/utils";

import BlogContent from "@/components/pages/news-and-events/BlogContent.astro";

import { getLangFromUrl } from "@/i18n/utils";
import BlogLayout from "@/layouts/BlogLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => {
    const [lang, ...slug] = entry.slug.split("/");
    return {
      params: { lang, slug: slug.join("/") },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const lang = getLangFromUrl(Astro.url);
---

<BlogLayout
  title={`${entry.data.title} - DSDP Cambodia`}
  img={entry.data.image?.src}
  author={entry.data.author}
  description={entry.data.description}
>
  <BlogContent
    title={entry.data.title}
    date={formatDate(entry.data.date.toISOString(), lang)}
    author={entry.data.author}
    image={entry.data.image}
    description={entry.data.description}
  >
    <Content />
  </BlogContent>
</BlogLayout>
