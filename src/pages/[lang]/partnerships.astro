---
import ContactUs from "@/components/partnership/ContactUs.astro";
import University from "@/components/partnership/University.astro";
import Welcome from "@/components/partnership/Welcome.astro";

import background from "@/assets/partnership/background-svg-blob 4.svg";
import { languages, type Language } from "@/i18n/ui";
import Layout from "@/layouts/layout.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang: lang as Language },
  }));
}

const { lang } = Astro.params;
---

<Layout title="ទំព័រដើម - Home">
  <Image
    src={background}
    alt="Background"
    class="absolute right-0 top-0 object-fill opacity-50"
    loading="lazy"
  />
  <Welcome lang={lang} />
  <University lang={lang} />
  <ContactUs lang={lang} />
</Layout>
