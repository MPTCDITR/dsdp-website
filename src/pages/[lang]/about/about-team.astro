---
import { AboutTeam as AboutTeamComponent } from "@/components/pages/about/about-team-content";
import { ui, languages } from "@/i18n/ui";
import { getLangFromUrl } from "@/lib/i18n";
import Layout from "@/layouts/layout.astro";

export async function getStaticPaths() {
    return Object.keys(languages).map(lang => ({
      params: { lang },
    }));
  }

const lang = getLangFromUrl(Astro.url);
const translations = ui[lang];
---

<Layout title="អំពីឌីអេសឌីធី - About DSDP", lang={lang}>
  <main class="relative overflow-hidden">
    <AboutTeamComponent translations={translations} client:load />
  </main>
</Layout>