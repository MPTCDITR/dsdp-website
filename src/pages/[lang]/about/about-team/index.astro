---
import AboutTeam from "@/components/pages/about/about-team-content.astro";

import { languages } from "@/i18n/ui";
import Layout from "@/layouts/layout.astro";
import type { GetStaticPaths } from "astro";

export const getStaticPaths = (() => {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}) satisfies GetStaticPaths;

const { lang } = Astro.params;
---

<Layout
  title="អំពីក្រុមឌីអេសឌីធី - About DSDP Team"
  description="Meet the dedicated team behind DSDP, working together to drive our mission and make a positive impact in the community."
  author="DSDP Cambodia"
>
  <AboutTeam lang={lang} />
</Layout>
