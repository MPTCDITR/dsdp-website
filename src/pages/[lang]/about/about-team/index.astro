---
import { AboutTeam as AboutTeamComponent } from "@/components/pages/about/about-team-content";

import { languages } from "@/i18n/ui";
import Layout from "@/layouts/layout.astro";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const lang = Astro.params.lang as keyof typeof languages;
---

<Layout
  title="អំពីក្រុមឌីអេសឌីធី - About DSDP Team"
  description="Meet the dedicated team behind DSDP, working together to drive our mission and make a positive impact in the community."
  author="DSDP Cambodia"
  img="/dsdp-logo-final.svg"
>
  <AboutTeamComponent lang={lang} client:load />
</Layout>
